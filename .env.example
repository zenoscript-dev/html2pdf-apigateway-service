# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=6100
NODE_ENV=development
API_PREFIX=api/v1

# ===========================================
# CORS CONFIGURATION
# ===========================================
# For development: use * or http://localhost:3000
# For production: use your domain https://yourdomain.com
CORS_ORIGIN=*

# ===========================================
# DATABASE CONFIGURATION (MySQL)
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=html2pdf_gateway
DB_SYNCHRONIZE=true
# Set to false in production and use migrations instead

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty if no password is set

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# ===========================================
# PASSWORD SECURITY (Argon2)
# ===========================================
PASSWORD_PEPPER=your-super-secret-pepper-value-change-this
# WARNING: Keep this secret and different per environment
# If this is compromised, all passwords are at risk

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# For Development (Mailtrap)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password

# For Production (use your SMTP provider)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

SMTP_FROM_EMAIL=noreply@html2pdf.com
SMTP_FROM_NAME=HTML2PDF Service

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_TTL=60
# Time window in seconds (60 = 1 minute)

RATE_LIMIT_MAX=10
# Maximum requests per TTL window

# ===========================================
# API KEY CONFIGURATION
# ===========================================
API_KEY_PREFIX=pdf
# Prefix for generated API keys (e.g., pdf_live_xxx)

# ===========================================
# BACKEND SERVICE URLS
# ===========================================
PDF_SERVICE_URL=http://localhost:5000
# URL of the PDF generation microservice

# ===========================================
# FRONTEND URL
# ===========================================
FRONTEND_URL=http://localhost:3000
# Used for email verification links and password reset links

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Default admin user (created on first run if doesn't exist)
ADMIN_EMAIL=admin@html2pdf.com
ADMIN_PASSWORD=admin123
# WARNING: Change this password immediately after first login

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SANDBOX_KEYS=true
# Set to false to disable sandbox/test API keys

# ===========================================
# QUOTA ENFORCEMENT
# ===========================================
ENFORCE_DAILY_QUOTA=true
ENFORCE_MONTHLY_QUOTA=true
# Set to false to disable quota enforcement (useful for testing)

MAX_CONCURRENT_JOBS=5
# Global max concurrent jobs (can be overridden per plan)

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
MAX_FILE_SIZE_MB=100
# Global maximum file size (can be restricted per plan)

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
# Options: error, warn, info, debug, verbose

# ===========================================
# SESSION CONFIGURATION
# ===========================================
SESSION_SECRET=your-session-secret-change-this
# Used for session management

# ===========================================
# OPTIONAL: MONITORING & METRICS
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_PORT=9090
